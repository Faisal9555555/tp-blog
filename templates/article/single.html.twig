{% extends 'base.html.twig' %}

{% block title %}

	{{ oneNote.titre }}
{% endblock %}

{% block body %}

	<h1 class="">{{ oneNote.titre }}</h1>
	<p class="fs-4 ">{{ oneNote.description }}</p>

	<p class="">Publié le :
		{{ oneNote.createdAt|date("d/m/Y") }}
		</p>

	<hr class="">

	<div class="row pt-3 pb-3">
		<div class="card p-4 rounded-3">
			<p>{{ oneNote.contenu }}</p>
		</div>
	</div>

	<hr class="">

	<div class="col-md-12 text-center">
		<a class="btn btn-warning" href='{{path('app_home')}}'>Revenir à l'acceuil</a>
	</div>


{% endblock %}
