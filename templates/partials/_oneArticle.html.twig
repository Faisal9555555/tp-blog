{% extends 'base.html.twig' %}

{% block title %}Toutes les notes
{% endblock %}

{% block body %}
	<h1 class="text-white">Toutes les notes</h1>

	<div class="row mt-5">
		{% for item in note %}
			<div class="shadow col-md-4 mb-4">
				<div class="card card-bg rounded-4">
					<div class="card-body">
						<h5 class="card-title">{{ item.titre }}</h5>
						<p class="card-text">{{ item.description }}</p>
						<a href={{ path('show_article', { id: item.id } ) }} class="btn btn-gradient">Voir la note</a>
						{# <a href={{ path('app_update_note', { id: item.id } ) }} class="btn btn-gradient">Modifier</a> #}

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
